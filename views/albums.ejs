<!doctype html>
<html lang="en">
  <head>

    <% if (albums.length == 1) { %>
      <% albums.forEach(albumObj => { %>
        <title><%= albumObj.shortname %> </title>

    <% }) %>

    <% } %>

    <% if (albums.length > 1) { %>
      <title>All Albums</title>
    <% } %>

    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css">

  </head>
  <body>

    <div class="container-fluid">

        <% albums.forEach(albumObj => { %>

          <div class="row mt-3 mb-3">

                  <div class="offset-1 col-2">

                      <a href="/albums/<%=albumObj.shortname%>"><img src="/images/<%= albumObj.artwork %>"  alt=""></a>

                      <% if (albums.length == 1) { %>

                        <a href="<%= albumObj.appleMusic %> " target="_blank" style="display:block">
                          <span>Apple Music</span>
                        </a>
                        
                        <a href="<%= albumObj.spotify %> " target="_blank">
                            <span>Spotify</span>
                        </a>
                        
                      <% } %>

                  </div> <!-- album artwork and purchase links -->

                  <div id="tracklist" class="offset-1 col-lg-7 d-flex align-items-center">

                    <% if (albums.length == 1) { %>

                      <% for( let index = 0; index < tracks.length; index++ ) { %>

                        <%= tracks[index] %>
                        <br>

                      <% } %>

                      <%= albumObj.summary %> 

                    <% } %>

                  </div> <!-- end of tracklist -->


          </div> <!-- end of first row -->

                  <div class="row">
                    <div class="col d-flex justify-content-center" style="font-size:80px">

                      <%= albumObj.albumname %> 

                    </div>
                  </div>


        <% }) %>

  </div>
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>

    <script src="/js/albums.js"></script>

  </body>
</html>