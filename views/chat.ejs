<!DOCTYPE html>
<html>

<head><%- include('partials/template/head.ejs') %></head>

<body id="Chat">


    <div class="container-fluid">

    <%- include('partials/content/header.ejs') %>
        <div class="row">
            <div class="col-sm-12">
                <article class="chat">
                    <header class="chat-header mt-5 mb-5">
                        <div class="h3 chat-title ml-3">Super Fan Chat Room
                        </div><!-- chat-title -->
                    </header><!-- chat-header -->

                    <form name="chatForm" class="form-horizontal chat-form">
                        <div class="form-group">
                            <label for="chat-username" class="col-sm-2 control-label">Username</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="chat-username" required
                                    placeholder="Enter your name">
                            </div><!-- col-sm-10 -->
                        </div><!-- form-group -->
                        <div class="form-group">
                            <label for="chat-message" class="col-sm-2 control-label">Message</label>
                            <div class="col-sm-10">
                                <div class="input-group">
                                    <input type="text" placeholder="Enter a message, then press enter"
                                        class="form-control" id="chat-message" rows="2" autocomplete="off" required>

                                        <button id="chat-submit" class="btn btn-outline-dark ml-3" type="submit">Send</button>

                                </div><!-- input-group -->
                            </div><!-- col-sm-10 -->
                        </div><!-- form-group -->
                    </form>
                    <div class="panel panel-default ml-2">
                        <div class="panel-body chat-display">
                            <p class="chat-text ml-2">Welcome...add your message using the form above</p>
                        </div><!-- panel-body -->
                    </div><!-- panel-default -->
                </article><!-- article -->
            </div><!-- col-sm-12 -->
        </div><!-- row -->
    </div><!-- container -->

    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.3.0/socket.io.js"></script>

    <%- include('partials/template/jsdefaults.ejs') %>

    <script src="/js/chat.js"></script>

</body>

</html>